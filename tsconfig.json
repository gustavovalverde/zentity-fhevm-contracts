{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "types": ["node", "hardhat-deploy"]
  },
  "include": [
    "src/**/*",
    "typechain-types/**/*",
    "scripts/**/*",
    "test/**/*",
    "deploy/**/*",
    "hardhat.config.ts"
  ],
  "exclude": ["node_modules", "artifacts", "cache"]
}
